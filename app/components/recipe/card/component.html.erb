<div class="border border-gray-300 rounded bg-gray-100 px-4 py-6 flex w-full h-60">
  <%= image_tag(@recipe.image_url, class: "h-full rounded object-cover aspect-square") %>
  <div class="flex flex-col ml-4 justify-center bg-red-300">
    <h2 class="font-bold"><%= @recipe.title %> - <%= @recipe.id %></h2>
    <p>Preparation time: <%= @recipe.prep_time %> min</p>
    <p>Cooking time: <%= @recipe.cook_time %> min</p>
    <p>Total time: <%= @recipe.total_time %> min</p>
    <p>Rating: <%= @recipe.rating %></p>
    <p><%= @recipe.ingredients.pluck(:name).compact.join(", ") %></p>
  </div>
</div>
