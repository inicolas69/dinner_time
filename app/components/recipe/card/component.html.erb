<div class="grid w-full grid-rows-2 border border-[#DDDDCB]/80 h-96 rounded-xl">
  <%= image_tag(@recipe.image_url, class: "object-cover h-full w-full rounded-t-xl") %>
  <div class="flex flex-col justify-center p-1">
    <h2 class="font-bold"><%= @recipe.title %></h2>
    <p>Preparation time: <%= @recipe.prep_time %> min</p>
    <p>Cooking time: <%= @recipe.cook_time %> min</p>
    <p>Total time: <%= @recipe.total_time %> min</p>
    <p>Rating: <%= @recipe.rating %></p>
  </div>
</div>
